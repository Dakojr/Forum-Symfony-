{% extends 'base.html.twig' %}

{% block body %}

<div class="col-sm-12 col-md-8 ">
<div class="article-container">

{% for x in cat %}

    <a href="{{ path('topics', {slug: x.id }) }}">
        <img class="article-img" src="{{ asset('images/asteroid.jpeg') }}">
        <div class="article-title d-inline-block pl-3 align-middle">
            <span> {{ x.nameCat }} </span>
            <br>
            <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/alien-profile.png') }}">
                Mike Ferengi </span>
            <span class="pl-5 article-details float-right"> {{ x.dateCreate | date('Y/m/d') }}</span>
        </div>
    </a>

{% endfor %}

</div>
</div>
{% endblock %}